<div class="d-flex mb-3" >
  <h2>Sign In</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <%= devise_error_messages! %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('.i_placeholder_email') %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: t('.i_placeholder_password') %>
    <div class="form-text"><%= t('.txt_have_not_account')%> <%= link_to "Sign up", new_registration_path(resource_name), id: "link-to-sign-up" %><br /></div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.submit "Log in", data: {turbo: false}, class: "btn btn-primary login-button" %>
  </div>
<% end %>
