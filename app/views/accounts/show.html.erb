<% if current_user.role != 'user' %>
    <% if @user %>
        <%= button_to 'Back', accounts_path, method: :get, class:"btn btn-outline-primary my-3" %>
        <div class="jumbotron d-flex flex-row align-items-center justify-content-between">
            <div>
                <h2 id="email" class="display-4"><%= @user.email %></h2>
                <h4 id="role"><%= @user.role %></h4>
            </div>
            <div class="d-flex flex-row">
                <% if @user.role != 'admin' %>
                    <% if current_user.email != @user.email %>
                        <%= button_to 'Edit', user_edit_role_path, method: :get, class: "btn btn-primary me-2", id: "button-edit" %>
                    <% end %>
                    <% if current_user.admin? %>
                        <%= button_to 'Delete', user_path(@user), method: :delete, class: "btn btn-danger me-2", form: {data: {turbo_confirm: 'Are you sure?'}}, id: "button-delete" %>
                    <% end %>
                <% end %>
            </div>
        </div>
    <% end %>
<% else %>
    <% controller.redirect_to root_path %>
<% end %>