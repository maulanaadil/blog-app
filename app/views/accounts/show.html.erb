<% if @user %>
    <div class="jumbotron">
        <h2 class="display-4">
            <%= @user.email %>
        </h2>
        <h4>
            <%= @user.role %>
        </h4>

        <div class="d-flex flex-row">
            <% if @user.role == 'user' %>
                <%= button_to 'Delete', user_path(@user), method: :delete, class: "btn btn-danger me-2" %>
            <% end %>

            <%= link_to 'Back', accounts_path, class:"btn btn-dark" %>
        </div>
    </div>
<% end %>