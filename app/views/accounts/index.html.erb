<% if current_user.role != 'user' %>
  <div class="mb-5">
    <h1 class="mb-3">Accounts</h1>

    <% if user_signed_in? %>
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Created At</th>
            <th>Updated At</th>
          </tr>
        </thead>

        <tbody>
        <% @user.each do |user| %>
            <tr>
                <td><%= link_to user.email, user, class:"text-decoration-none", id: 'email' %></td>
                <td><%= user.role %></td>
                <td><%= user.created_at %></td>
                <td><%= user.updated_at %></td> 
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
<% else %>
  <% controller.redirect_to root_path %>
<% end %>
