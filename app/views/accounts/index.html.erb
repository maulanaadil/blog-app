<% if current_user.role != 'user' %>
  <div class="mb-5">
    <h1 class="mb-3">Accounts</h1>

    <% if user_signed_in? %>
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Created At</th>
            <th>Updated At</th>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
