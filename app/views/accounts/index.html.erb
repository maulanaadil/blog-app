<div class="mb-5">
  <h1 class="mb-3"><%= t('.title') %></h1>

    <table class="table table-striped table-bordered table-hover">
      <thead>
      <tr>
          <th><%= t('.t_email') %></th>
          <th><%= t('.t_role') %></th>
          <th><%= t('.t_created_at') %></th>
          <th><%= t('.t_updated_at') %></th>
        </tr>
      </thead>

      <tbody>
      <% @user.each do |user| %>
          <tr>
              <td><%= link_to user.email, user, class:"text-decoration-none", id: "email_#{user.id}"%></td>
              <td><%= user.role %></td>
              <td><%= user.created_at %></td>
              <td><%= user.updated_at %></td> 
          </tr>
        <% end %>
      </tbody>
    </table>
</div>