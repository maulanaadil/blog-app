<h1 class="mb-3">Accounts</h1>

<% if user_signed_in? %>
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Created At</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% @user.each do |user| %>
        <tr>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= user.created_at %></td> 
            <% if user.role == 'user' %>
                <td><%= link_to 'Delete', user_path(user), method: :delete, data: { turbo: false }, class: "btn btn-outline-danger btn-sm" %></td> 
            <% else %>
                <td></td>
            <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>